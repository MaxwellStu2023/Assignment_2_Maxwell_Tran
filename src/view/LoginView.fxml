<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.net.*?>
<?import java.util.*?>
<?import javafx.geometry.Pos?>
<?import javafx.scene.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<VBox fx:controller="controller.LoginController" alignment="CENTER" styleClass="background" prefHeight="100.0" prefWidth="400.0" xmlns:fx="http://javafx.com/fxml/1">
        <Separator/>
        <Label text="Login" styleClass="heading" alignment="CENTER"/>
        <Separator/>
    <HBox alignment="CENTER" spacing="10">
        <Label text="Username: "/>
        <TextField fx:id="username" GridPane.columnIndex="1" GridPane.rowIndex="1" />
    </HBox>
    <HBox alignment="CENTER" spacing="12">
        <Label text="Password: "/>
        <PasswordField fx:id="password" />
    </HBox>
    <Button styleClass="button" fx:id="login" text="Login" onAction="#handleLogin" />
        <stylesheets>
                <URL value="@style.css"/>
        </stylesheets>
</VBox>