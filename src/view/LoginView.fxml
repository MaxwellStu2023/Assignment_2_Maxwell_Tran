<GridPane fx:controller="controller.LoginController" alignment="CENTER" styleClass="background" prefHeight="100.0" prefWidth="400.0" spacing="20" xmlns:fx="http://javafx.com/fxml/1">
        <Separator/>
        <Label text="Login" styleClass="heading"/>
        <Separator/>
        <Label GridPane.columnIndex="0" GridPane.rowIndex="0" text="Username"/>
        <TextField fx:id="username" GridPane.columnIndex="1" GridPane.rowIndex="0" />
        <Label GridPane.columnIndex="0" GridPane.rowIndex="1" text="Password"/>
        <PasswordField fx:id="password" GridPane.columnIndex="1" GridPane.rowIndex="1" />
        <Button fx:id="login" text="Login" />

        <stylesheets>
            <URL value="@style.css"/>
        </stylesheets>
</GridPane>