<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.net.*?>
<?import java.util.*?>
<?import javafx.geometry.Pos?>
<?import javafx.scene.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<VBox fx:controller="controller.LoginController" alignment="CENTER" styleClass="background" spacing="10" prefHeight="100.0" prefWidth="400.0" xmlns:fx="http://javafx.com/fxml/1">
        <Separator/>
        <Label text="Login" styleClass="heading" alignment="CENTER"/>
        <Separator/>

    <HBox alignment="CENTER">
        <VBox alignment="CENTER" spacing="10" maxWidth="150">
            <Label text="Username: "/>
            <Label text="Password: "/>
        </VBox>
        <VBox alignment="CENTER" spacing="10" maxWidth="150">
            <TextField fx:id="username" />
            <PasswordField fx:id="password" />
        </VBox>
    </HBox>
    <Button styleClass="button" fx:id="login" text="Login" onAction="#handleLogin" />
        <stylesheets>
                <URL value="@style.css"/>
        </stylesheets>
</VBox>